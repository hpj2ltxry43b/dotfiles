; TODO: bluetooth

[colors]
background = #222
background-sel = #444

foreground = #aaa
foreground-sel = #eee

important = #e74c3c

[bar/main]
width = 99%
height = 30
offset-x = 0.5%
; offset-y = 0.3%
radius = 15
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

; border is invisible because alpha = 0
border-color = #0000 

padding-left = 3
padding-right = 3

module-margin-left = 2
module-margin-right = 2

font-0 = Cantarell:pixelsize=13;2

modules-left = windowname
modules-center = bspwm
modules-right = xkeyboard wired-network wireless-network xbacklight pulseaudio battery date

cursor-click = pointer
cursor-scroll = ns-resize

[module/windowname]
type = internal/xwindow
label = %title%
label-maxlen = 100

[module/bspwm]
type = internal/bspwm

enable-scroll = false

label-focused = %index%
label-focused-background = ${colors.background-sel}
label-focused-foreground = ${colors.foreground-sel}
label-focused-padding = 2

label-occupied = %index%
label-occupied-background = ${colors.background}
label-occupied-foreground = ${colors.foreground-sel}
label-occupied-padding = 2

label-urgent = !%index%!
label-urgent-background = ${colors.important}
label-urgent-foreground = ${colors.foreground-sel}
label-urgent-padding = 2

label-empty = %index%
label-empty-background = ${colors.background}
label-empty-foreground = ${colors.foreground}
label-empty-padding = 2

[module/xkeyboard]
type = internal/xkeyboard

format = <label-layout>
label-layout = %layout%

[module/wired-network]
type = internal/network
interface = enp0s20f0u1

label-connected = E
label-disconnected =

[module/wireless-network]
type = internal/network
interface = wlp1s0

format-connected = <label-connected> <ramp-signal>
format-disconnected = <label-disconnected>

label-connected = W:
label-disconnected = NW

ramp-signal-0 = 0
ramp-signal-1 = 1
ramp-signal-2 = 2
ramp-signal-3 = 3
ramp-signal-4 = 4
ramp-signal-5 = 5
ramp-signal-6 = 6
ramp-signal-7 = 7
ramp-signal-8 = 8
ramp-signal-9 = 9
ramp-signal-10 = 10

[module/xbacklight]
type = internal/xbacklight

format = <label>
label = B: %percentage%%

[module/pulseaudio]
type = internal/pulseaudio

label-volume = V: %percentage%%
label-muted = V: M%percentage%%

[module/battery]
type = internal/battery

battery = BAT0
adapter = AC

label-charging = >> %percentage%%
label-discharging = << %percentage%%
label-full = || %percentage%%

[module/date]
type = internal/date

interval = 1.0

label = %date%, %time%

date = "%d %b %Y"
time = %H:%M:%S

date-alt = "%a %d %b %Y"
time-alt = "%H:%M"

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5

; vim:ft=dosini
